{
  "name": "authorization-server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/authorization-server/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/authorization-server/test/jest-e2e.json --watch",
    "test-local-account:e2e": "jest --config ./apps/local-account-server/test/jest-e2e.json --watch",
    "test-auth-api:e2e": "jest --config ./apps/auth-api/test/jest-e2e.json --watch",
    "prepare": "husky",
    "typeorm": "ts-node --project ./tsconfig.json -r tsconfig-paths/register ./node_modules/typeorm/cli",
    "migration:create": "yarn typeorm migration:create ./apps/sell-point-core/src/migrations/migration",
    "migration:generate": "yarn typeorm -d ./apps/sell-point-core/src/shared/connection-source.ts migration:generate ./apps/sell-point-core/src/migrations/migration",
    "migration:run": "yarn typeorm -d ./apps/sell-point-core/src/shared/connection-source.ts migration:run",
    "migration:revert": "yarn typeorm -d ./apps/sell-point-core/src/shared/connection-source.ts migration:revert",
    "migration-account:run": "yarn typeorm -d ./apps/sell-point-account/src/shared/connection-source.ts migration:run",
    "migration-account:generate": "yarn typeorm -d ./apps/sell-point-account/src/shared/connection-source.ts migration:generate ./apps/sell-point-account/src/migrations/migration",
    "migration-account:revert": "yarn typeorm -d ./apps/sell-point-account/src/shared/connection-source.ts migration:revert",
    "migration-transaction:run": "yarn typeorm -d ./apps/sell-point-transaction/src/shared/connection-source.ts migration:run",
    "migration-transaction:generate": "yarn typeorm -d ./apps/sell-point-transaction/src/shared/connection-source.ts migration:generate ./apps/sell-point-transaction/src/migrations/migration",
    "migration-transaction:revert": "yarn typeorm -d ./apps/sell-point-transaction/src/shared/connection-source.ts migration:revert",
    "migration-balance:run": "yarn typeorm -d ./apps/sell-point-balance/src/shared/connection-source.ts migration:run",
    "migration-balance:generate": "yarn typeorm -d ./apps/sell-point-balance/src/shared/connection-source.ts migration:generate ./apps/sell-point-balance/src/migrations/migration",
    "migration-balance:revert": "yarn typeorm -d ./apps/sell-point-balance/src/shared/connection-source.ts migration:revert"
  },
  "dependencies": {
    "@liaoliaots/nestjs-redis": "^9.0.5",
    "@nestjs/axios": "^3.0.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/microservices": "^10.3.9",
    "@nestjs/mongoose": "^10.0.6",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/typeorm": "^10.0.2",
    "axios": "^1.6.8",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "hbs": "^4.2.0",
    "ioredis": "^5.4.1",
    "kafkajs": "^2.2.4",
    "mongoose": "^8.3.1",
    "mysql2": "^3.9.7",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.0.11",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/"
    ],
    "moduleNameMapper": {
      "^@sell-point-core-share/(.*)$": "<rootDir>/apps/sell-point-core/src/shared/$1",
      "^@sell-point-core-account/(.*)$": "<rootDir>/apps/sell-point-core/src/account/$1",
      "^@sell-point-core-transaction/(.*)$": "<rootDir>/apps/sell-point-core/src/transaction/$1",
      "^@sell-point-core-transaction-type/(.*)$": "<rootDir>/apps/sell-point-core/src/transaction-type/$1",
      "^@sell-point-core/(.*)$": "<rootDir>/apps/sell-point-core/src/$1",
      "^@sell-point-account-share/(.*)$": "<rootDir>/apps/sell-point-account/src/shared/$1",
      "^@sell-point-account/(.*)$": "<rootDir>/apps/sell-point-account/src/account/$1",
      "^@sell-point-transaction-share/(.*)$": "<rootDir>/apps/sell-point-transaction/src/shared/$1",
      "^@sell-point-transaction/(.*)$": "<rootDir>/apps/sell-point-transaction/src/transaction/$1",
      "^@sell-point-transaction-type/(.*)$": "<rootDir>/apps/sell-point-transaction/src/transaction-type/$1",
      "^@sell-point-balance-share/(.*)$": "<rootDir>/apps/sell-point-balance/src/shared/$1",
      "^@sell-point-balance/(.*)$": "<rootDir>/apps/sell-point-balance/src/balance/$1"
    }
  }
}
